<?xml version="1.0" encoding="utf-8" ?>

<Menu>
  <Font AssetName="latoblack" />

  <Script>
    <Name>GameOverMenuScript</Name>
    <AssetName>GameOverMenuScript</AssetName>
    <Class Name="GameOverMenu" />
  </Script>

  <Scene Name="mainScene">
    <Frame Name="mainFrame">
      <Position>
        <X>center</X>
        <Y>0</Y>
      </Position>
      <Size>
        <Width>auto</Width>
        <Height>auto</Height>
      </Size>

      <Widgets>
        <Label Name="lblTitle">
          <Text>Game Over</Text>
          <FontName>latoblack</FontName>
          <FontSize>60</FontSize>
          <Position>
            <X>center</X>
            <Y>70</Y>
          </Position>
          <Color>#FFFFFF</Color>
          <UpdateMethod></UpdateMethod>
        </Label>

        <Button Name="btnBackToMenu" Template="StandardButton">
          <Label>
            <Text>BACK</Text>
          </Label>
          <OnClick>GameOverMenuScript.GameOverMenu.ExitClicked</OnClick>
          <Position>
            <X>center</X>
            <Y>750</Y>
          </Position>
        </Button>
      </Widgets>
    </Frame>
    <Frame Name="statsFrame">
      <Position>
        <X>0</X>
        <Y>0</Y>
      </Position>
      <Size>
        <Width>fill</Width>
        <Height>fill</Height>
      </Size>

      <Widgets>
        <Label Name="lblStatsLeft">
          <Text></Text>
          <FontName>latoblack</FontName>
          <FontSize>32</FontSize>
          <Position>
            <X>550</X>
            <Y>150</Y>
          </Position>
          <Color>#FFFFFF</Color>
          <UpdateMethod></UpdateMethod>
        </Label>

        <Label Name="lblStatsRight">
          <Text></Text>
          <FontName>latoblack</FontName>
          <FontSize>32</FontSize>
          <Position>
            <X>950</X>
            <Y>150</Y>
          </Position>
          <Color>#FFFFFF</Color>
          <UpdateMethod></UpdateMethod>
        </Label>
      </Widgets>
    </Frame>
  </Scene>
</Menu>